{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // 路径别名
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "conf/*": ["./conf/*"],
      "hooks/*": ["./hooks/*"],
      "core/*": ["./core/*"],
      "http/*": ["./http/*"],
      "pages/*": ["./pages/*"],
      "public/*": ["./public/*"],
      "store/*": ["./store/*"],
      "styles/*": ["./styles/*"],
      "utils/*": ["./utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
